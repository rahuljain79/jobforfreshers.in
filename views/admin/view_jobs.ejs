        <script>
            document.addEventListener('DOMContentLoaded', function() {
              var timestampButton = document.querySelector('#timestamp-button');
              var timestamp = document.querySelector('#timestamp');
              var timestampString = localStorage.getItem('timestamp');
              if (timestampString) {
                timestamp.textContent = 'Last Updated: ' + timestampString;
              }
              timestampButton.addEventListener('click', function() {
                var date = new Date();
                var year = date.getFullYear();
                var month = ('0' + (date.getMonth() + 1)).slice(-2);
                var day = ('0' + date.getDate()).slice(-2);
                var hour = ('0' + date.getHours()).slice(-2);
                var minute = ('0' + date.getMinutes()).slice(-2);
                var second = ('0' + date.getSeconds()).slice(-2);
                timestampString = day + '-' + month + '-' + year + ' ' + hour + ':' + minute + ':' + second;
                timestamp.textContent = 'Last Updated: ' + timestampString;
                localStorage.setItem('timestamp', timestampString);
              });
            });
          </script>
        

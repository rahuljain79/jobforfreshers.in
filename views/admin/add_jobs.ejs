    <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <h1 class="text-center">Add Job Details</h1>
            <hr>
          </div>
        </div>
      
        <form action="/admin/add_jobs" method="post">
          <div class="form-group row">
            <label for="company" class="col-sm-2 col-form-label">Company Name:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="company" name="company" placeholder="Enter Company Name">
            </div>
          </div>

          <div class="form-group row">
            <label for="company" class="col-sm-2 col-form-label">Recruitement Drive Name:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="company" name="drive" placeholder="Enter Recruitement Drive Name">
            </div>
          </div>
      
          <div class="form-group row">
            <label for="jobRole" class="col-sm-2 col-form-label">Job Role:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="jobRole" name="jobrole" placeholder="Enter Job Role">
            </div>
          </div>
      
          <div class="form-group row">
            <label for="qualification" class="col-sm-2 col-form-label">Qualification:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="qualification" name="qualification" placeholder="Enter Qualification">
            </div>
          </div>
      
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Batch Year:</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" id="batchyear" name="batch" placeholder="Enter Batch Year">
            </div>
      
            <label class="col-sm-2 col-form-label">Experience:</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" id="experience" name="experience" placeholder="Enter Experience">
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Salary:</label>
            <div class="col-sm-4">
              <input type="text" class="form-control" id="salary" name="salary" placeholder="Enter Salary">
            </div>
      
            <label class="col-sm-2 col-form-label">Last Date to Apply:</label>
            <div class="col-sm-4">
              <input type="Date" class="form-control" id="lastdatetoapply" name="last_date" placeholder="Enter Last Date to Apply">
            </div>
          </div>
          <div class="form-group row">
            <label for="jobRole" class="col-sm-2 col-form-label">Location:</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="location" name="location" placeholder="Enter Location">
            </div>
          </div>
          <div class="form-group row">
            <label for="jobRole" class="col-sm-2 col-form-label">Website URL:</label>
            <div class="col-sm-10">
              <input type="URL" class="form-control" id="location" name="URL" placeholder="Enter URL">
            </div>
          </div>
          <div class="form-group row">
            <label for="jobSummary" class="col-sm-2 col-form-label">Job Summary:</label>
            <div class="col-sm-10">
              <textarea class="form-control" id="jobSummary" rows="3" name="job_summary" placeholder="Enter Job Summary"></textarea>
            </div>
          </div>
      
          <div class="form-group row">
            <label for="responsibilities" class="col-sm-2 col-form-label">Responsibilities:</label>
            <div class="col-sm-10">
              <textarea class="form-control" id="responsibilities" name="responsibilities" rows="3" placeholder="Enter Responsibilities"></textarea>
            </div>
          </div>
      
          <div class="form-group row">
            <label for="eligibilityCriteria" class="col-sm-2 col-form-label">Eligibility Criteria:</label>
            <div class="col-sm-10">
              <textarea class="form-control" id="eligibilityCriteria" name="eligibility" rows="3" placeholder="Enter Eligibility Criteria"></textarea>
            </div>
          </div>
      
          <div class="form-group row">
            <label for="preferredSkills" class="col-sm-2 col-form-label">Preferred Skills:</label>
            <div class="col-sm-10">
              <textarea class="form-control" id="preferredSkills" rows="3" name="skills" placeholder="Enter Preferred Skills"></textarea>
            </div>
          </div>
          <div class="form-group row">
            <label for="aboutCompany" class="col-sm-2 col-form-label">About Company:</label>
            <div class="col-sm-10">
              <textarea class="form-control" id="aboutCompany" rows="3" name="about" placeholder="Enter About Company"></textarea>
            </div>
          </div>
      
          <div class="form-group row">
            <div class="col-sm-12">
              <button type="submit" class="btn btn-primary float-right">Submit</button>
            </div>
          </div>
        </form>
      </div>
    

</body>

